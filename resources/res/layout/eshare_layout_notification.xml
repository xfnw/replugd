<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:gravity="center_vertical" android:orientation="vertical" android:background="#ffff" android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView android:id="@+id/eshare_iv_icon" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:src="@drawable/eshare_ic_eshare" android:layout_alignParentLeft="true" android:layout_centerVertical="true"/>
    <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/eshare_ll_switch" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:layout_alignParentRight="true" android:layout_centerVertical="true">
        <ImageButton android:layout_gravity="center" android:id="@+id/eshare_ib_switch" android:background="@android:color/transparent" android:layout_width="87dp" android:layout_height="66dp" android:layout_marginTop="4dp" android:layout_marginRight="4dp" android:src="@drawable/eshare_cb_on"/>
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_toLeftOf="@+id/eshare_ll_switch" android:layout_toRightOf="@+id/eshare_iv_icon" android:layout_centerInParent="true" android:layout_centerVertical="true">
        <TextView android:textSize="14sp" android:textColor="@android:color/black" android:id="@+id/eshare_tv_title" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <TextView android:textSize="11sp" android:textColor="@android:color/black" android:id="@+id/eshare_tv_content" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    </LinearLayout>
</RelativeLayout>
