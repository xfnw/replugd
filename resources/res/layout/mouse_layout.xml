<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:background="#171719" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/right_layout" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_above="@+id/bottom_layout">
        <com.ecloud.eshare.view.TouchView android:id="@+id/iv_mouse_pad" android:layout_width="match_parent" android:layout_height="match_parent" android:src="@drawable/image_arrow" android:scaleType="center"/>
        <ImageView android:id="@+id/right_panel" android:background="@drawable/mouse_right_bg" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/bottom_layout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
        <ImageView android:id="@+id/bottom_panel" android:background="@drawable/mouse_bottom_bg" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    </RelativeLayout>
</RelativeLayout>
