<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:background="?attr/colorPrimary" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:background="?attr/colorPrimary" android:layout_width="match_parent" android:layout_height="45dp">
        <ImageView android:id="@+id/iv_setting_back" android:padding="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:src="@drawable/ic_back_dark_selector" android:layout_centerVertical="true"/>
        <TextView android:textSize="@dimen/text_title" android:textStyle="bold" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/setting_title" android:layout_centerInParent="true"/>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/vg_setting_name" android:background="?attr/colorPrimary" android:layout_width="match_parent" android:layout_height="44dp">
        <TextView android:textSize="17sp" android:textColor="@drawable/color_333333" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:text="@string/setting_name" android:drawableLeft="@drawable/ic_setting_name" android:drawablePadding="4dp" android:layout_centerVertical="true"/>
        <TextView android:textSize="14sp" android:textColor="@drawable/color_666666" android:id="@+id/tv_setting_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="16sp" android:text="@string/setting_name" android:drawableRight="@drawable/ic_item_click" android:drawablePadding="10dp" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/vg_setting_pen" android:background="?attr/colorPrimary" android:layout_width="match_parent" android:layout_height="44dp">
        <TextView android:textSize="17sp" android:textColor="@drawable/color_333333" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:text="@string/tv_setting_pen" android:drawableLeft="@drawable/share_pen" android:drawablePadding="4dp" android:layout_centerVertical="true"/>
        <ImageView android:id="@+id/iv_pen_share" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="16sp" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/vg_setting_about" android:background="?attr/colorPrimary" android:layout_width="match_parent" android:layout_height="44dp">
        <TextView android:textSize="17sp" android:textColor="@drawable/color_333333" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:text="@string/setting_about" android:drawableLeft="@drawable/ic_setting_about" android:drawablePadding="4dp" android:layout_centerVertical="true"/>
        <TextView android:textSize="14sp" android:textColor="@drawable/color_666666" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="16sp" android:drawableRight="@drawable/ic_item_click" android:drawablePadding="10dp" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/rl_wirte_nfc" android:background="?attr/colorPrimary" android:visibility="gone" android:layout_width="match_parent" android:layout_height="44dp">
        <TextView android:textSize="17sp" android:textColor="@drawable/color_333333" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:text="NFC写数据" android:drawableLeft="@drawable/ic_setting_about" android:drawablePadding="4dp" android:layout_centerVertical="true"/>
        <TextView android:textSize="14sp" android:textColor="@drawable/color_666666" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="16sp" android:drawableRight="@drawable/ic_item_click" android:drawablePadding="10dp" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <RelativeLayout android:orientation="horizontal" android:id="@+id/settings_audio" android:background="?attr/colorPrimary" android:visibility="invisible" android:layout_width="match_parent" android:layout_height="44dp">
        <TextView android:textSize="16sp" android:textColor="@drawable/color_333333" android:gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:text="@string/settings_transfer_audio" android:drawableLeft="@drawable/ic_setting_about" android:drawablePadding="4dp" android:layout_alignParentLeft="true" android:layout_centerVertical="true"/>
        <androidx.appcompat.widget.SwitchCompat android:id="@+id/switch_audio" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="16dp" android:layout_alignParentRight="true" android:layout_centerVertical="true" app:theme="@style/BrandedSwitch"/>
    </RelativeLayout>
</LinearLayout>
