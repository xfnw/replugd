<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:background="#28282a" android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView android:id="@+id/voldown" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:src="@drawable/ic_remote_down" android:layout_alignParentLeft="true" android:layout_centerInParent="true"/>
    <ImageView android:id="@+id/volup" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="10dp" android:src="@drawable/ic_remote_up" android:layout_alignParentRight="true" android:layout_centerInParent="true"/>
    <SeekBar android:id="@+id/vol_progresss" android:layout_width="match_parent" android:layout_height="15dp" android:layout_margin="5dp" android:max="30" android:indeterminate="false" android:thumb="@null" android:layout_toLeftOf="@+id/volup" android:layout_toRightOf="@+id/voldown" android:layout_centerInParent="true" style="@style/progressBarHorizontal_color"/>
    <LinearLayout android:background="#18181a" android:layout_width="match_parent" android:layout_height="2px" android:layout_alignParentBottom="true"/>
</RelativeLayout>
